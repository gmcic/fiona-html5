-#医学影像
.row
  .col-md-3
    .portlet
      .portlet-title
        .caption
          %i.fa.fa-user
          化验检查
        .actions
          %a.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;"}
            %i.fa.fa-plus
            选择宠物

          %a.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;"}
            %i.fa.fa-remove
            新增宠物

      .portlet-body.portlet-empty
        = partial 'views/commons/pet_header'

  .col-md-9
    -#文件上传
    = partial :'layouts/inputs/fileupload', :locals => {:keyword => '', :fieldName => '种类名称', :maxlength => '32', :required => "true"}

    .row
      .col-md-12
        -#Text
        = partial :'layouts/inputs/textarea', :locals => {:fieldName => '检测结果', :maxlength => '32', :required => "true"}
