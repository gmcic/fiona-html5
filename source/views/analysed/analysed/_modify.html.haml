/ BEGIN SAMPLE FORM PORTLET
.row
  .col-md-3
    .portlet
      .portlet-title
        .caption
          %i.fa.fa-user
          化验检查
        .actions
          %a.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;"}
            %i.fa.fa-plus
            选择宠物

          %a.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;"}
            %i.fa.fa-remove
            新增宠物

      .portlet-body.portlet-empty
        = partial 'views/commons/pet_header'

  .col-md-9
    .portlet.light.bordered
      .portlet-title
        .caption
          %i.fa.fa-file
          %span.caption-subject.font-dark.sbold.uppercase 化验结果
        .actions
          %a.btn.btn-circle.btn-default.btn-sm{:href => "javascript:;"}
            %i.fa.fa-plus
            上传附件

      .portlet-body.form
        %table.table.table-striped.table-hover.table-bordered
          %thead
            %tr
              %th
                %input.group-checkable{:type => "checkbox"}/
              %th 操作
              %th
              - ['名称', '物种', '年龄段', '检验值', '正常值', '结论'].each do |fieldName|
                %th #{fieldName}

          %tbody
            %tr.odd.gradeX{ "ng-repeat" => @page_id + " in " +@page_id+ "s" }
              %td
                %input.checkboxes{:type => "checkbox", 'ng': {'model': 'selection[' +@page_id+ '.id]', 'change': 'selectChange()'} }/
              %td

              - ['名称', '物种', '年龄段', '检验值', '正常值', '结论'].each do |fieldName|
                %td
                  = bind @page_id, (@fields[fieldName] || 'error')

        %h4 附件

        -#附件列表
        = partial 'views/commons/file_list'

        %h4 检测结果
        .row
          .col-md-12
            %textarea.form-control
