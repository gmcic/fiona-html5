= partial :'views/commons/vip/portal_vip_view'

.portlet.light.bordered
  .portlet-title
    .caption
      %i.icon-settings.font-dark
      %span.caption-subject.font-dark.sbold.uppercase 宠物信息

  .portlet-body.form
    .tabbable-line
      %ul.nav.nav-tabs
        %li.active
          %a{"data-toggle" => "tab", :href => "//#pet_basic"} 基本信息
        %li
          %a{"data-toggle" => "tab", :href => "//#pet_pictures"} 图片信息
        %li
          %a{"data-toggle" => "tab", :href => "//#pet_vaccine"} 疫苗注射情况

      .tab-content
        #pet_basic.tab-pane.active
          .form-body
            .row
              .col-md-4
                = partial :'layouts/inputs/text', :locals => { :fieldName => '编号(自动)', :required => "true", :maxlength => '16'}

              .col-md-4
                = partial :'layouts/inputs/text', :locals => { :fieldName => '宠物昵称', :required => "true", :maxlength => '16'}


              .col-md-4
                .form-group
                  = partial :'layouts/inputs/select', :locals => {:fieldName => '宠物性别', :maxlength => '32', :required => "true", :options => "type as type.valueNameCn for type in dropdowns.petSexSet"}

            .row
              .col-md-4
                = partial :'layouts/inputs/date', :locals => { :fieldName => '出生日期', :maxlength => '16', :required => "true" }

              .col-md-4
                = partial :'layouts/inputs/textview', :locals => { :fieldName => '宠物年龄', :maxlength => '16'}

              .col-md-4
                .form-group
                  = partial :'layouts/inputs/select', :locals => {:fieldName => '绝育状态', :maxlength => '32', :required => "true", :options => "type.valueNameCn as type.valueNameCn for type in dropdowns.petBreedSet"}

            .row
              .col-md-4
                = partial :'layouts/inputs/select', :locals => {:fieldName => '宠物颜色', :maxlength => '32', :options => "type as type.valueNameCn for type in dropdowns.petSkinColorSet"}

              .col-md-4
                .form-group
                  = partial :'layouts/inputs/selectview', :locals => {:fieldName => '宠物种类', :options => "type.name for type in dropdowns.raceTypeSet"}

              .col-md-4
                .form-group
                  = partial :'layouts/inputs/select', :locals => {:fieldName => '宠物品种', :maxlength => '32', :required => "true", :options => "type as type.type for type in dropdowns.petRaceSet"}

            .row
              .col-md-4
                = partial :'layouts/inputs/select', :locals => {:fieldName => '宠物状态', :maxlength => '32', :options => "type as type.valueNameCn for type in dropdowns.sickFileCodeSet"}


              -#.col-md-7
              -#  = partial :'layouts/inputs/text', :locals => { :fieldName => '病例号', :maxlength => '16', :required => "true"}

            .row
              .col-md-3
                = partial :'layouts/inputs/double', :locals => { :fieldName => '身高(cm)', :maxlength => '16'}

              .col-md-3
                = partial :'layouts/inputs/double', :locals => { :fieldName => '体重(kg)', :maxlength => '16'}

              .col-md-3
                = partial :'layouts/inputs/double', :locals => { :fieldName => '肩宽(cm)', :maxlength => '16'}

              .col-md-3
                = partial :'layouts/inputs/double', :locals => { :fieldName => '体长(cm)', :maxlength => '16'}

            .row
              .col-md-12
                = partial :'layouts/inputs/text', :locals => { :fieldName => '宠物牌号', :maxlength => '16'}

            .row
              .col-md-12
                = partial :'layouts/inputs/textarea', :locals => { :fieldName => '备注', :maxlength => '16'}

        #pet_pictures.tab-pane
          = partial :'layouts/inputs/fileupload', :locals => { :fieldName => '备注', :maxlength => '16'}

          %button.btn.blue{:type => "button"} 上传图片
          %button.btn.blue{:type => "button"} 拍摄照片
          %button.btn.blue{:type => "button"} 删除图片
          %button.btn.blue{:type => "button"} 设为头像


        #pet_vaccine.tab-pane
          疫苗注射情况
